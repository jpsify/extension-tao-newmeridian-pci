<div class="nmcEquationEditorInteraction">
    <div class="prompt">{{{prompt}}}</div>
    <div class="math-entry">
        <div class="math-tools">
            <button class="math-entry-tool undo-button" data-tooltip="undo"><span><i class="icon-eq-undo"></i></span></button>
            <button class="math-entry-tool redo-button" data-tooltip="redo"><span><i class="icon-eq-redo"></i></span></button>
            <button class="math-entry-tool clear-button" data-tooltip="clear all"><span><i class="icon-clear"></i></span></button>
        </div>
        <div class="editor-container">
            <div class="mje-editor" ></div>
        </div>
        <div class="toolbar-container show-less">
            <div class="toolbar" style="order: 4"></div>
            <button class="more-less-button">
                <i class="icon-caret"></i>
            </button>
        </div>
    </div>
</div>